@model ChatterBox.Models.Group

@{
    ViewData["Title"] = "Delete Group";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Group</h4>
                </div>
                <div class="card-body">
                    <h5>Are you sure you want to delete "@Model.Name"?</h5>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone.
                        All messages and data associated with this group will be permanently deleted.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Group Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@(Model.IsPrivate ? "Private" : "Public")</dd>

                        <dt class="col-sm-4">Members</dt>
                        <dd class="col-sm-8">@(Model.Members?.Count ?? 0)</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.GroupId" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Confirm Delete</button>
                            <a asp-action="Details" asp-route-id="@Model.GroupId"
                               class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>